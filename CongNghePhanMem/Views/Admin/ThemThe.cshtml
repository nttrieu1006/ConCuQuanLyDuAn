@model CongNghePhanMem.Models.GiaoDien

@{
    ViewBag.Title = "ThemThe";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Thêm thẻ giao dịch ngân hàng</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThuocTinh, new { htmlAttributes = new { @class = "form-control", @placeholder="Nhập tên ngân hàng..." } })
                @Html.ValidationMessageFor(model => model.ThuocTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTri, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã thẻ..." } })
                @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTri1, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập họ tên chủ thẻ..." } })
                @Html.ValidationMessageFor(model => model.GiaTri1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTri2, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập địa chỉ làm thẻ..." } })
                @Html.ValidationMessageFor(model => model.GiaTri2, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="the" style="background-color:lightseagreen" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<style>
    #the {
        margin-left:0px;
    }
</style>



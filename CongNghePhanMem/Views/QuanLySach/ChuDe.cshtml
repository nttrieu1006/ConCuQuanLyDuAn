@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<CongNghePhanMem.Models.ChuDe>

@{
    ViewBag.Title = "Chủ đề";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Chủ đề</h2>

<p>
    <i class="fa fa-address-card" aria-hidden="true">@Html.ActionLink("Thêm mới", "ThemCD")</i>
</p>
<table class="table">
    <tr>
        <th>
            Tên chủ đề
        </th>
        <th>Thao tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Xóa", "XoaCD", new { @MaCD=item.MaCD, @onclick = "return confirm('Bạn chắc chắn muốn xóa?')" })
        </td>
    </tr>
}

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("ChuDe", new { page = page }))

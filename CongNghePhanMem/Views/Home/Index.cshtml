@{
    ViewBag.Title = "Hoàn đa cấp";
    Layout = "~/Views/Shared/LayoutHF.cshtml";
}

<div id="slidey" style="display:none;">
        <ul>
            @Html.Action("KhuyenMaiPartial", "Sach")
        </ul>
</div>
<script src="~/Content/js/jquery.slidey.js"></script>
<script src="~/Content/js/jquery.dotdotdot.min.js"></script>
<script type="text/javascript">
    $("#slidey").slidey({
        interval: 8000,
        listCount: 5,
        autoplay: true,
        showList: true
    });
    $(".slidey-list-description").dotdotdot();
</script>

<div class="general">
    <div class="container">
        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Mới nhập</a></li>
                <li role="presentation"><a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="false">Mua nhiều</a></li>
                <li role="presentation"><a href="#rating" id="rating-tab" role="tab" data-toggle="tab" aria-controls="rating" aria-expanded="true">Giảm giá</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="home" aria-labelledby="home-tab">
                    <div class="w3_agile_featured_movies">
                        @Html.Action("SachMoi","Sach")
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="profile" aria-labelledby="profile-tab">
                    @Html.Action("MuaNhieu","Sach")
                    <div class="clearfix"> </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="rating" aria-labelledby="rating-tab">
                    @Html.Action("KhuyenMai", "Sach")
                    <div class="clearfix"></div>
                </div>               
            </div>
        </div>
    </div>
</div>

<!-- //general -->

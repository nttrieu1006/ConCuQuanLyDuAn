@model CongNghePhanMem.Models.TinhTrangNguoiDung

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">           
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTT, new { htmlAttributes = new { @class = "form-control", @placeholder="Nhập tên tình trạng..."} })
                @Html.ValidationMessageFor(model => model.TenTT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

